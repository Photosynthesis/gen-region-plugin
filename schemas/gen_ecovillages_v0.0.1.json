{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "id": "https://cdn.murmurations.network/schemas/gen_ecovillages_v0.0.1.json",
  "title": "GEN Ecovillages",
  "description": "Ecovillage projects in the Global Ecovillage Network.",
  "type": "object",
  "properties": {
    "name": {
      "title": "Name",
      "description": "The name of the ecovillage",
      "type": "string"
    },
    "url": {
      "title": "Website",
      "description": "Website URL",
      "type": "string",
      "maxLength": 2000,
      "pattern": "https?://"
    },
    "profile_url": {
      "title": "Profile URL",
      "description": "Profile URL",
      "type": "string",
      "maxLength": 2000,
      "pattern": "https?://"
    },
    "gen_project_url": {
      "title": "GEN Project URL",
      "description": "URL of the project page on ecovillage.org",
      "type": "string",
      "maxLength": 2000,
      "pattern": "https?://"
    },
    "description": {
      "title": "Description",
      "description": "",
      "type": "string"
    },
    "project_types": {
      "title": "Project types",
      "description": "",
      "type": "array"
    },
    "community_types": {
      "title": "Community types",
      "description": "",
      "type": "array",
      "items": {
         "type":"string",
         "enum": [
           "network",
           "ecovillage",
           "religious",
           "intentional",
           "traditional",
           "indigenous",
           "ecocity",
           "ecocomun",
           "ecopro",
           "perma",
           "green",
           "learning",
           "restorante",
           "ecotour",
           "youth",
           "ecofarm",
           "other",
           "holistic",
           "transition",
           "cohousing",
           "shared",
           "unspecified"
         ],
         "enumNames": [
           "Network of Ecovillage",
           "Ecovillage",
           "Religious or Spiritual",
           "Intentional",
           "Traditional",
           "Indigenous",
           "Eco City",
           "Eco Community",
           "Eco Project",
           "Permaculture Project",
           "Green School",
           "Learning Centre",
           "Restoration Site",
           "Eco Tourism Site",
           "Youth-led Project",
           "Eco Farm",
           "Other",
           "Holistic Center",
           "Transition Town",
           "Cohousing",
           "Shared Housing",
           "Unspecified, Other"
         ]
       }
    },
    "gen_community_setting": {
      "title": "Community setting",
      "description": "",
      "type": "array",
      "items": {
        "type":"string",
        "enum": [
          "rural",
          "urban",
          "nomadic"
        ],
        "enumNames": [
          "Rural",
          "Urban",
          "Nomadic"
        ]
      }
    },
    "country": {
       "title": "Country",
       "description": "",
       "type": "string"
    },
    "locality": {
       "title": "Locality",
       "description": "A city, town, village, etc.",
       "type": "string",
       "pattern": "^.{1,100}$"
    },
    "region": {
       "title": "Region",
       "description": "A state, county, province, etc.",
       "type": "string",
       "pattern": "^.{1,100}$"
    },
    "gen_region": {
       "title": "GEN Region",
       "description": "The GEN region of this project",
       "type": "string",
       "pattern": "^.{1,100}$"
    },
    "project_status": {
       "title": "Project status",
       "description": "",
       "type": "string",
       "enum": [
          "aspiring",
          "established",
          "disbanded"
        ],
        "enumNames": [
          "Aspiring",
          "Established",
          "No longer active"
        ]
    },
    "languages_spoken": {
       "title": "Languages spoken",
       "type": "array",
       "pattern": "^.{1,100}$"
    },
    "gen_sustainability_dimensions": {
       "title": "GEN sustainability dimensions",
       "type": "array"
    },
    "gen_project_gen_status": {
      "title": "GEN membership status",
      "type": "string"
    },
    "visitors_accepted": {
       "title": "Visitors accepted",
       "description": "",
       "type": "string",
       "enum": [
         "yes",
         "rarely",
         "no"
       ],
       "enumNames":[
         "Yes",
         "Yes,rarely",
         "No"
       ]
    },
    "new_members_accepted" : {
      "title": "New members accepted",
      "type": "string",
      "enum": [
        "yes",
        "no",
        "not"
      ],
      "enumNames": [
        "Yes",
        "No",
        "Not currently(but there is a list or possibly in the future)"
      ]
    },
    "geolocation": {
    "title": "Geolocation Coordinates",
      "description": "The geo-coordinates (latitude & longitude) of the project",
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      },
      "required": ["lat", "lon"]
    }
  },
  "required": ["name", "url"],
  "metadata": {
    "creator": {
      "name": "GENNA Data Sharing Project"
    },
    "schema": {
      "name": "gen_ecovillages_v0.0.1",
      "version": "0.0.1"
    }
  }
}
